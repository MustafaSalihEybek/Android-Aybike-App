<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.sign.SignInFragment">

    <TextView
        android:layout_width="wrap_content"
        android:text="Sign In"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/signTitleTxtColor"
        android:textSize="27sp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Email address"
        android:background="@drawable/edit_bg"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingEnd="10dp"
        android:id="@+id/sign_in_fragment_editUserEmail"
        android:paddingStart="10dp"
        android:layout_marginTop="45dp"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:textColorHint="@color/signEditTxtColor"
        android:textColor="@color/signEditTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Password"
        android:background="@drawable/edit_bg"
        android:id="@+id/sign_in_fragment_editUserPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textColorHint="@color/signEditTxtColor"
        android:textColor="@color/signEditTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Forgot Password"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:layout_marginEnd="25dp"
        android:id="@+id/sign_in_fragment_txtForgotPassword"
        android:textColor="@color/signForgotPasswordTxtColor"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="200dp"
        android:text="Sign In Now"
        android:textSize="19sp"
        android:id="@+id/sign_in_fragment_btnSignIn"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/signBtnTxtColor"
        android:background="@drawable/sign_btn_bg"
        android:layout_height="65dp"
        app:backgroundTint="@null"/>

    <Button
        android:layout_width="200dp"
        android:text="Sign Up Now"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:id="@+id/sign_in_fragment_btnSignUp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/signBtnTxtColor"
        android:background="@drawable/sign_btn_bg"
        android:layout_height="65dp"
        app:backgroundTint="@null"/>

</LinearLayout>