<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SubCategoryContentFragment">

    <Spinner
        android:layout_width="wrap_content"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/spinner_bg"
        android:id="@+id/sub_category_content_fragment_spinnerFilter"
        android:layout_height="27dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layoutAnimation="@anim/layout_animation"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/sub_category_content_fragment_spinnerFilter"
        android:id="@+id/sub_category_content_fragment_recyclerView"
        android:layout_height="match_parent"/>

</RelativeLayout>