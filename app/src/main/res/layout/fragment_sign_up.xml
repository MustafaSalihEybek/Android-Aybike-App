<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".view.sign.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Kayıt Ol"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/signTitleTxtColor"
            android:textSize="27sp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Kullanıcı adı"
            android:background="@drawable/edit_bg"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingEnd="10dp"
            android:id="@+id/sign_up_fragment_editUserName"
            android:paddingStart="10dp"
            android:layout_marginTop="45dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColorHint="@color/signEditTxtColor"
            android:textColor="@color/signEditTxtColor"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Email adresi"
            android:background="@drawable/edit_bg"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingEnd="10dp"
            android:id="@+id/sign_up_fragment_editUserEmail"
            android:paddingStart="10dp"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColorHint="@color/signEditTxtColor"
            android:textColor="@color/signEditTxtColor"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Şifre"
            android:background="@drawable/edit_bg"
            android:id="@+id/sign_up_fragment_editUserPassword"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColorHint="@color/signEditTxtColor"
            android:textColor="@color/signEditTxtColor"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="50dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginEnd="25dp"
            android:id="@+id/sign_up_fragment_spinnerUserGender"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_bg"
            android:layout_marginStart="25dp"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Doğum günü"
            android:background="@drawable/edit_bg"
            android:id="@+id/sign_up_fragment_editUserBirthday"
            android:paddingEnd="10dp"
            android:focusableInTouchMode="false"
            android:paddingStart="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="16sp"
            android:textColorHint="@color/signEditTxtColor"
            android:textColor="@color/signEditTxtColor"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:hint="Ülke"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:id="@+id/sign_up_fragment_editUserCountry"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginEnd="15dp"
                android:inputType="text"
                android:textSize="16sp"
                android:textColorHint="@color/signEditTxtColor"
                android:textColor="@color/signEditTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="50dp"/>

            <EditText
                android:layout_width="0dp"
                android:hint="Şehir"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:id="@+id/sign_up_fragment_editUserCity"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginStart="15dp"
                android:inputType="text"
                android:textSize="16sp"
                android:textColorHint="@color/signEditTxtColor"
                android:textColor="@color/signEditTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="50dp"/>

        </LinearLayout>

        <Button
            android:layout_width="225dp"
            android:text="Hemen Kayıt Ol"
            android:textSize="19sp"
            android:id="@+id/sign_up_fragment_btnSignUp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/signBtnTxtColor"
            android:background="@drawable/sign_btn_bg"
            android:layout_height="70dp"
            app:backgroundTint="@null"/>

        <Button
            android:layout_width="225dp"
            android:text="Hemen Giriş Yap"
            android:textSize="19sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:layout_marginBottom="25dp"
            android:id="@+id/sign_up_fragment_btnSignIn"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/signBtnTxtColor"
            android:background="@drawable/sign_btn_bg"
            android:layout_height="70dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</ScrollView>