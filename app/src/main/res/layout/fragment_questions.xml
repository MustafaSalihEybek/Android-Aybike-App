<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.question.QuestionsFragment">

    <include
        android:id="@+id/aybike_action_toolBar"
        layout="@layout/aybike_action_bar"/>

    <com.nexis.aybike.util.VerticalViewPager
        android:layout_below="@+id/aybike_action_toolBar"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/questions_fragment_relativeBottom"
        android:id="@+id/questions_fragment_viewPager"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/questions_fragment_relativeBottom"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/questions_fragment_btnShare"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:text="PaylaÅŸ"
            android:textAllCaps="false"
            android:textColor="@color/btnTxtColor"
            android:textSize="17sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/questions_fragment_btnFinishTest"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:text="Testi Bitir"
            android:textAllCaps="false"
            android:textColor="@color/btnTxtColor"
            android:textSize="17sp"
            app:backgroundTint="@null" />

    </RelativeLayout>

</RelativeLayout>

</layout>