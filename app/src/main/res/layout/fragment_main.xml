<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    tools:context=".view.MainFragment">

    <include
        layout="@layout/aybike_action_bar"
        android:id="@+id/aybike_action_toolBar"/>

    <TextView
        android:id="@+id/main_fragment_txtQuestionOfDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aybike_action_toolBar"
        android:background="@color/questionOfDayBgColor"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/questionOfDayTxtColor"
        android:textSize="17sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_fragment_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_fragment_txtQuestionOfDay"
        android:background="@color/fragmentTabLayoutBgColor"
        app:tabIndicatorColor="@color/fragmentTabLayoutShadowColor"
        app:tabSelectedTextColor="@color/fragmentTabLayoutSelectedTxtColor"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="@color/fragmentTabLayoutTxtColor" />

    <com.nexis.aybike.util.SwipeDisabledViewPager
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/main_fragment_viewPager"
        android:layout_below="@+id/main_fragment_tabLayout"
        android:layout_height="match_parent"/>

</RelativeLayout>

</layout>