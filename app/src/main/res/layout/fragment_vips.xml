<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.VipsFragment">

    <include
        android:id="@+id/aybike_action_toolBar"
        layout="@layout/aybike_action_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Vip Paketleri"
        android:textSize="27sp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/vipPackageTitleColor"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.95"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:id="@+id/vips_fragment_linearVip1"
            android:background="@drawable/vip_package_unselected_bg"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Vip 1"
                android:textSize="18sp"
                android:id="@+id/vips_fragment_txtVip1Title"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:id="@+id/vips_fragment_txtVip1Content1"
                android:layout_marginTop="10dp"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Sınırsız Test Çözme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:id="@+id/vips_fragment_txtVip1Content2"
                android:layout_marginTop="5dp"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Testleri Profilde Gizleyebilme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="1 Ay"
                android:layout_marginTop="10dp"
                android:id="@+id/vips_fragment_txtVip1Month"
                android:textColor="@color/vipPackageTxtColor"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="33.99 TL"
                android:textSize="17sp"
                android:id="@+id/vips_fragment_txtVip1Price"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:padding="5dp"
            android:id="@+id/vips_fragment_linearVip3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/vip_package_unselected_bg"
            android:orientation="vertical"
            android:layout_height="260dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Vip 3"
                android:textSize="21sp"
                android:id="@+id/vips_fragment_txtVip3Title"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/vips_fragment_txtVip3Content1"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Sınırsız Test Çözme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:id="@+id/vips_fragment_txtVip3Content2"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Testleri Profilde Gizleyebilme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="6 Ay"
                android:layout_marginTop="10dp"
                android:id="@+id/vips_fragment_txtVip3Month"
                android:textColor="@color/vipPackageTxtColor"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="68.99 TL"
                android:textSize="18sp"
                android:id="@+id/vips_fragment_txtVip3Price"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.95"
            android:padding="5dp"
            android:id="@+id/vips_fragment_linearVip2"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@drawable/vip_package_unselected_bg"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Vip 2"
                android:textSize="18sp"
                android:id="@+id/vips_fragment_txtVip2Title"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:id="@+id/vips_fragment_txtVip2Content1"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Sınırsız Test Çözme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:id="@+id/vips_fragment_txtVip2Content2"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:text="- Testleri Profilde Gizleyebilme"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="3 Ay"
                android:layout_marginTop="10dp"
                android:id="@+id/vips_fragment_txtVip2Month"
                android:textColor="@color/vipPackageTxtColor"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="47.99 TL"
                android:textSize="17sp"
                android:id="@+id/vips_fragment_txtVip2Price"
                android:textColor="@color/vipPackageTxtColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="185dp"
        android:text="Satın Al"
        android:textSize="19sp"
        android:id="@+id/vips_fragment_btnBuy"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/signBtnTxtColor"
        android:background="@drawable/sign_btn_bg"
        android:layout_height="70dp"
        app:backgroundTint="@null"/>

</LinearLayout>

</layout>