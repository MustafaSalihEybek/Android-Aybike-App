<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.question.QuestionType4Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="21sp"
        android:layout_marginTop="10dp"
        android:id="@+id/question_type4_fragment_txtQuestionContent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_bold"
        android:text="1-)Soru text Soru text Soru text\nSoru text Soru text Soru text"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="DOĞRU"
            android:textSize="21sp"
            android:id="@+id/question_type4_fragment_btnAnswerTrue"
            android:layout_marginEnd="20dp"
            android:textColor="@color/type4TxtColor"
            android:fontFamily="@font/poppins_black"
            android:background="@drawable/question_answer_button_bg"
            android:layout_height="65dp"
            app:backgroundTint="@null"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="YANLIŞ"
            android:textSize="21sp"
            android:id="@+id/question_type4_fragment_btnAnswerFalse"
            android:layout_marginStart="20dp"
            android:textColor="@color/type4TxtColor"
            android:fontFamily="@font/poppins_black"
            android:background="@drawable/question_answer_button_bg"
            android:layout_height="65dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</LinearLayout>

</layout>